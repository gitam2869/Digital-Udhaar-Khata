<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/idCardViewContactReader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true">
<!--        android:layout_marginLeft="16dp"-->
<!--        android:layout_marginRight="16dp"-->



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/idTextViewIconContactReader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_drawable"
                    android:text="E"
                    android:textColor="#ffff"
                    android:textSize="18sp"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/idTextViewContactNameContactReader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stringOfLanguageName"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="16dp"
                    />

                <TextView
                    android:id="@+id/idTextViewContactPhoneContactReader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stringOfLanguageName"
                    android:textSize="16sp"
                    android:textColor="#242121"
                    android:layout_marginLeft="16dp"
                />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>