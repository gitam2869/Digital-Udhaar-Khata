<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/idCardViewCustomerTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true">
<!--        android:layout_marginLeft="16dp"-->
<!--        android:layout_marginRight="16dp"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                >

                <TextView
                    android:id="@+id/idTextViewDateCustomerTransaction"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Date"
                    android:padding="12dp"
                    android:gravity="left"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/idTextViewYouGaveCustomerTransaction"
                    android:layout_weight="4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/stringOfYouGave"
                    android:gravity="center"
                    android:padding="12dp"
                    android:textSize="18sp"

                    android:textColor="#000000"

                    />

                <TextView
                    android:id="@+id/idTextViewYouGotCustomerTransaction"
                    android:layout_weight="4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/stringOfYouGot"
                    android:gravity="center"
                    android:padding="12dp"
                    android:textSize="18sp"
                    android:textColor="#000000"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:background="#000000"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>



</LinearLayout>